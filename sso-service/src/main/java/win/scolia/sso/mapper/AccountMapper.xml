<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="win.scolia.sso.mapper.AccountMapper">

    <insert id="insertUser" parameterType="win.scolia.sso.api.pojo.User"
            useGeneratedKeys="true" keyColumn="u_id"
            keyProperty="user.uId">
        INSERT INTO users (username, password, salt, create_time)
        VALUES (#{user.username}, #{user.password}, #{user.salt}, NOW())
    </insert>

    <select id="selectPasswordAndSaltByUsername" parameterType="string"
            resultType="win.scolia.sso.api.pojo.User">
        SELECT password, salt FROM users WHERE username = #{username}
    </select>


</mapper>