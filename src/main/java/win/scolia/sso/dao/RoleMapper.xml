<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="win.scolia.sso.dao.RoleMapper">

    <insert id="insertRole" parameterType="string">
        INSERT INTO role SET role_name = #{roleName}
    </insert>

    <delete id="deleteRoleByName" parameterType="string">
        DELETE FROM role WHERE role_name = #{roleName}
    </delete>

    <delete id="deleteUserRoleMapByRoleId" parameterType="long">
        DELETE FROM user_role WHERE role_id = #{roleId}
    </delete>

    <delete id="deleteUserRoleMapByUserId" parameterType="long">
        DELETE FROM user_role WHERE user_id = #{userId}
    </delete>
    
    <update id="updateRoleByName" parameterType="string">
        UPDATE role SET role_name = #{newRoleName} WHERE role_name = #{oldRoleName}
    </update>

    <select id="selectUserRolesByUserName" parameterType="string" resultType="string">
        SELECT role_name
        FROM role
            JOIN user_role
                ON role.role_id = user_role.role_id
            JOIN user
                ON user_role.user_id = user.user_id
        WHERE user.user_name = #{userName}
    </select>
    
    <resultMap id="roleMap" type="win.scolia.sso.bean.entity.Role">
        <id column="role_id" property="roleId" />
        <result column="role_name" property="roleName" />
        <result column="create_time" property="createTime" />
        <result column="last_modified" property="lastModified" />
    </resultMap>
    
    <select id="selectRoleByRoleName" parameterType="string" resultMap="roleMap">
        SELECT role_id, role_name, create_time, last_modified FROM role WHERE role_name = #{roleName}
    </select>

    <select id="selectAllRoles" parameterType="string" resultMap="roleMap">
        SELECT role_id, role_name, create_time, last_modified FROM role
    </select>
</mapper>

